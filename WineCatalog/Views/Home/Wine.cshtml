@model WineCatalog.Models.WineIndexVM

<div class="row">
    <div class="col-md-12">
        <h2>Wine catalog</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-xs-4">Name</th>
                    <th class="col-xs-3">Color</th>
                    <th class="col-xs-2 text-center">Price</th>
                    <th class="col-xs-1 text-center">In stock</th>
                    <th class="col-xs-2 text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="wine in model.Wines">
                    <td>{{wine.Name}}</td>
                    <td>{{wine.Color}}</td>
                    <td class="text-center">{{wine.Price}}</td>
                    <td class="text-center">
                        <span ng-if="wine.InStock"><i class="fa fa-check-circle-o" aria-hidden="true"></i></span>
                        <span ng-if="!wine.InStock"><i class="fa fa-circle-o" aria-hidden="true"></i></span>
                    </td>
                    <td class="text-center">
                        <span class="pointer" ng-click="removeModal(wine.Id, $index)"><i class="fa fa-trash-o"></i></span>
                    </td>
                </tr>
                <tr ng-if="!model.Wines.length">
                    <td colspan="5" class="text-center">
                        There are no wines to display
                    </td>
                </tr>
                <tr ng-if="states.showWineForm">
                    <td>
                        <input type="text" class="form-control" placeholder="Name" ng-model="new.Wine.Name" />
                    </td>
                    <td>
                        <input type="text" class="form-control" placeholder="Colour" ng-model="new.Wine.Color" />
                    </td>
                    <td>
                        <input type="number" class="form-control" placeholder="Price" ng-model="new.Wine.Price" />
                    </td>
                    <td class="text-center">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-model="new.Wine.InStock" /> in stock
                            </label>
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-success ladda-button" ng-click="addWine()" 
                                loading-button data-style="zoom-out" spin="states.isAdding">Add</button>
                        <button type="button" class="btn btn-default" ng-click="showWineForm(false)">Cancel</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-success" ng-click="showWineForm(true)" ng-if="!states.showWineForm">Add wine</button>
    </div>
</div>